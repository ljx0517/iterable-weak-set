{
  "name": "iterable-weak-set",
  "version": "1.0.0",
  "description": "a iterable WeakSet",
  "scripts": {
    "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-esm.json",
    "build": "npm run tsc",
    "test": "mocha -r ts-node/register test/*.test.ts",
    "test:coverage": "nyc npm run test"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "test/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "test/_tests_/**/*.*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  }
}
